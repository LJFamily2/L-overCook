<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <!-- CSS -->
      <link rel="stylesheet" href="/css/admin/globalCSS.css" />
      <link rel="stylesheet" href="/css/admin/contentManagement.css" />
      <title>L'overCook</title>

      <!-- Bootstrap -->
      <link
         href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
         rel="stylesheet"
         integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
         crossorigin="anonymous"
      />
      <script
         src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
         integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
         crossorigin="anonymous"
         defer
      ></script>

      <!-- Remix -->
      <link
         rel="stylesheet"
         href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      />
   </head>
   <body>
      <div class="fluid-container">
         <!-- Title-->
         <div class="row d-flex align-items-center">
            <% if(heading){ %>
            <h1 class="py-3 px-5 col-10"><%= heading %></h1>
            <% } %>
            <div class="col-2"><%- include('../partials/langButton') %></div>
         </div>
         <hr />

         <!-- Headline  -->
         <%- include('../partials/headline') %>

         <!-- Table display information -->
         <table class="table text-center" style="height: 500px;">
            <thead>
               <tr>
                  <th class="w-25" scope="col">Created</th>
                  <th class="w-25" scope="col">Username</th>
                  <th class="w-25" scope="col">Email</th>
                  <th class="w-25" scope="col"></th>
               </tr>
            </thead>
            <tbody>
               <% users.forEach( user => { %>
               <tr>
                  <td class="w-25"><%= user.getFormattedDateTime() %></td>
                  <td class="w-25"><%= user.username %></td>
                  <td class="w-25"><%= user.email %></td>
                  <td class="w-25">
                     <a
                        href=""
                        style="
                           cursor: pointer;
                           text-decoration: none;
                           color: black;
                        "
                     >
                        <i class="ri-edit-box-line"></i>
                     </a>
                  </td>
               </tr>
               <% }) %>
            </tbody>
         </table>

         <!-- Navigation of the table -->
         <%- include('../partials/navigationOfTable') %>
      </div>
   </body>
</html>
