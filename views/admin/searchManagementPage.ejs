      <table class="table table-hover text-center" id="table">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <!-- <th scope="col">ID</th> -->
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col" style="width: 300px;">Ingredients</th>
        <th scope="col">Cuisine</th>
        <th scope="col">Time</th>
        <th scope="col" style="max-width: 200px; word-wrap: break-word;">URL</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
