          <td>
            <% if (recipe.image) { %>
              <img
                src="<%= recipe.image %>"
                alt="<%= recipe.image %>"
                width="100"
              />
            <% } else { %>
              N/A
            <% } %>
          </td>
          <td><%= recipe.name %></td>
          <td><%= recipe.description ? recipe.description : 'N/A'%></td>
          <td style="width: 300px;">
            <div style="height: 100px; overflow-y: scroll;">
              <% recipe.ingredients.forEach(ingredient => { %>
                <%= ingredient?.ingredient?.name %> (<%= ingredient.quantity %>)<br>
              <% })%>

            </div>
          </td>
          <td><%= recipe.cuisine ? recipe.cuisine.name : 'N/A' %></td>
          <td><%= recipe.time ? recipe.time : 'N/A' %></td>
          <td style="max-width: 200px; word-wrap: break-word;"><%= recipe.url ? recipe.url : 'N/A' %></td>
          <td>
