<head>
  <link rel="stylesheet" href="/css/partials/adminHeader.css" />
  
</head>
<header>
  <!-- Logo image -->
  <div id="logo-with-name">
    <a href="/dashboard">
      <img src="/images/logoWithName.png" />
    </a>
  </div>

  <!-- Main navigation -->
  <nav>
    <div class="top-links">
      <a href="/dashboard" >
        <div class="<%= currentPage === 'dashboard' ? 'nav-active' : '' %>">
          <i class="bx bx-home"></i>
          <span>Home</span>
        </div>
      </a>

      <a href="/users" >
        <div class="<%= currentPage === 'user-management' ? 'nav-active' : '' %>">
          <i class="bx bx-user"></i>
          <span>User Management</span>
        </div>
        </a>

      <a href="/recipes" >
        <div class="<%= currentPage === 'recipe-management' ? 'nav-active' : '' %>">
          <i class="bx bx-bowl-hot"></i>
          <span>Recipe Management</span>
        </div>
      </a>
      <a href="/ingredients" >
        <div class="<%= currentPage === 'ingredient-management' ? 'nav-active' : '' %>">
          <i class="bx bx-bowl-hot"></i>
          <span>Ingredient Management</span>
        </div>
      </a>
      <a href="/cuisines" >
        <div class="<%= currentPage === 'cuisine-management' ? 'nav-active' : '' %>">
          <i class="bx bx-bowl-hot"></i>
          <span>Cuisine Management</span>
        </div>
      </a>
    </div>

    <form action="/users/log-out" method="post">
      <button type="submit" class="p-0" style="background: none; border: none;">
        <div id="log-out">
          <i class="bx bxs-log-out"></i>
          <span>Log out</span>
        </div>
      </button>

    </form>
  </nav>
</header>
