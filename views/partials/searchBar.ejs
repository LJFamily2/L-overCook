<head>
   <!-- for the magnifier glass icon -->
   <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
   />

   <!-- CSS -->
   <link rel="stylesheet" href="/css/partials/searchBar.css" />
   <!-- Js -->
   <script src="/js/clients/searchItems.js" defer></script>
</head>

<div id="search">
   <h2>Recipe Search</h2>
   <form action="/search" method="post" id="search-bar" class="position-relative">
      <button type="submit">
         <i class="bx bx-search"></i>
      </button>
      <input
         type="text"
         placeholder="Enter recipe name or ingredients you have..."
         id="searchInput"
         name="searchInput"
         onkeyup="searchItems('searchInput', 'item-list', 'searchDropDown'  )"
      />
      <!-- searchDropDown -->
      <div
         class="searchDropDown w-100 position-absolute start-0 top-100 hidden"
         id="searchDropDown"
      >
      <ul class="list-group" id="item-list">
            <% searchIngredients.forEach(ingredient => {%>
            <li
               class="list-group-item"
               style="cursor: pointer"
               onclick="setValue('searchInput', '<%= ingredient.name %>', 'searchDropDown')"
            >
               <%= ingredient.name %>
            </li>
            <% }) %>
            <% searchRecipes.forEach(recipe => {%>
            <li
               class="list-group-item"
               style="cursor: pointer"
               onclick="setValue('searchInput', '<%= recipe.name %>', 'searchDropDown')"
            >
               <%= recipe.name %>
            </li>
            <% }) %>

         </ul>
      </div>
   </form>
</div>
