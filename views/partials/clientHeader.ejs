
<head>
        <!-- Css -->
        <link rel="stylesheet" href="/css/partials/clientHeader.css" />
        <link rel="stylesheet" href="/css/partials/langButton.css" />
</head>
<% if(!userAuthentication){ %>
    <header>
      <div class="nav-left">
        <a href="/" style="text-decoration: none;">
          <img
            id="logo-without-name"
            src="/images/logoWithoutName.png"
          />
            <img id="logo-name" src="/images/loverCook.png" />
        </a>
      </div>

      <div class="nav-right">
        <% if(user){ %>
        <a href="#"> <span> History </span> </a>
        <a href="/favorite-recipe"> <span> Favorites </span> </a>
        
        <div class="user-section">
          <div class="user-profile">
            <a href="/account/profile"> 
              <img
                src="/uploadImages/<%= user.avatar %>"
                alt="upload file"
                />
              <span><%= user.username %></span> 
            </a>
          </div>
        
          <div class="log-out"> Log out </div>
        </div>
        
        <% }else{ %>
          <a href="/signin"> <span> Login </span> </a>
          <span class="m-2"> | </span>
          <a href="/signup"> <span> Register </span> </a>
        <% } %>
        <%- include('./langButton') %>
      </div>
    </div>
  </header>
  <% }else{ %>
    <header>
      <div class="nav-left">
        <a href="/" style="text-decoration: none;">
          <img
            id="logo-without-name"
            src="/images/logoWithoutName.png"
          />
            <img id="logo-name" src="/images/loverCook.png" />
        </a>
      </div>
      <div class="nav-right">
        <%- include('./langButton') %>
      </div>
    </div>
  </header>
