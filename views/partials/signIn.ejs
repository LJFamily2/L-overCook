<head>
   <!-- Css -->
   <link rel="stylesheet" href="/css/partials/signUpSignIn.css" />
</head>
<!-- Sign up form -->
<div class="background"></div>

<section class="client-sign-up-form">
   <div class="form-title">
      <div class="title-1">Sign In</div>
      <div class="title-2">Welcome back!</div>
   </div>

   <div class="form-format">
      <form class="form-layout" action="/" method="post">
         <div class="field">
            <label class="label" for="username">Username</label>
            <input
               class="input-box"
               id="username"
               name="username"
               type="text"
            />
         </div>

         <div class="field">
            <label class="label" for="password">Password</label>
            <input
               class="input-box"
               id="password"
               name="password"
               type="text"
            />
            <p>
               Use 8 or more characters with a mix of letters, numbers, and
               symbols
            </p>
         </div>
         <div class="form-end">
            <button class="submit-button" type="submit">Sign In</button>
            <p>Don't have an account? <a href="/signup">Sign Up</a></p>
         </div>
      </form>
   </div>
</section>
