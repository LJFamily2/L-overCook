<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <!-- CSS -->
      <link rel="stylesheet" href="/css/admin/globalCSS.css" />
      <link rel="stylesheet" href="/css/admin/contentManagement.css" />
      <title>L'overCook</title>

      <!-- Bootstrap -->
      <link
         href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
         rel="stylesheet"
         integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
         crossorigin="anonymous"
      />
      <script
         src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
         integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
         crossorigin="anonymous"
         defer
      ></script>

      <!-- Remix -->
      <link
         rel="stylesheet"
         href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      />
   </head>
   <body>
      <div class="container">
         <!-- Headline  -->
         <div class="headline">
            <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
               <ol class="breadcrumb bg-light m-0">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page">
                     Library
                  </li>
               </ol>
            </nav>
            <div class="searchBar">
               <i class="ri-search-line"></i>
               <input
                  type="text"
                  class="p-1"
                  id="search"
                  placeholder="Tìm kiếm"
               />
            </div>
         </div>

         <!-- Table display information -->
         <table class="table m-0 text-center">
            <thead>
                <tr>
                    <th class="w-25" scope="col">Created</th>
                    <th class="w-25" scope="col">Username</th>
                    <th class="w-25" scope="col">Email</th>
                    <th class="w-25" scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach( user => { %>
                    <tr>
                        <td class="w-25"><%= user.getFormattedDateTime() %></td>
                        <td class="w-25"><%= user.username %></td>
                        <td class="w-25"><%= user.email %></td>
                        <td class="w-25">
                            <a href="" style="cursor: pointer; text-decoration: none; color: black;">
                                <i class="ri-edit-box-line"></i>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
         <!-- Navigation of the table -->
         <nav class="row pt-2 m-0">

            <!--displayRowPerPage -->
            <div class="col-8 d-flex justify-content-end align-items-center">
               <label for="rows">Rows per page </label>
               <select
                  name="rows"
                  id="rows"
                  class="border-0"
                  style="outline: none; margin-left: 5px"
               >
                  <option value="5" selected>4</option>
                  <option value="5">5</option>
                  <option value="5">8</option>
               </select>
            </div>

            <!-- Pages -->
            <div class="col">
               <p class="m-0 d-flex justify-content-center align-items-center">
                  1-3 of 3
                  <i
                     class="ri-arrow-drop-left-line fs-4 mx-2"
                     style="cursor: pointer"
                  ></i>
                  <i
                     class="ri-arrow-drop-right-line fs-4 mx-2"
                     style="cursor: pointer"
                  ></i>
               </p>
            </div>
         </nav>
      </div>
   </body>
</html>
